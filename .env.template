# API Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secure-key-here  # Required for API authentication when enabled
API_KEY=your-api-key-here        # For rate limiting and API access control

# Scraper Settings
MAX_CONCURRENT_SCRAPES=5
TIMEOUT=30
SCREENSHOT_QUALITY=80

# Redis Configuration
REDIS_URL=redis://redis:6379
CACHE_TTL=86400
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # Per hour

# Monitoring
PROMETHEUS_ENABLED=true

# Document Converter Settings
CONVERTER_MAX_FILE_SIZE_MB=5
CONVERTER_CACHE_TTL=3600  # 1 hour cache for converted documents
CONVERTER_RATE_LIMIT_ENABLED=true
CONVERTER_RATE_LIMIT_REQUESTS=50  # Per hour
CONVERTER_RATE_LIMIT_PERIOD=3600
CONVERTER_CONCURRENT_CONVERSIONS=3
CONVERTER_TIMEOUT=300  # 5 minutes

# Converter Image Settings
CONVERTER_IMAGE_QUALITY=80
CONVERTER_MAX_IMAGE_SIZE_MB=2
CONVERTER_STORE_IMAGES=true  # Whether to store extracted images
CONVERTER_IMAGE_STORAGE_PATH=/app/data/images

# Converter Format Settings
CONVERTER_PDF_EXTRACT_IMAGES=true
CONVERTER_PDF_DETECT_TABLES=true
CONVERTER_DOCX_PRESERVE_FORMATTING=true
CONVERTER_XLSX_MAX_ROWS=10000
CONVERTER_PPTX_INCLUDE_NOTES=true

# Converter Cache Settings
CONVERTER_CACHE_ENABLED=true
CONVERTER_CACHE_KEY_PREFIX=converter
CONVERTER_CACHE_COMPRESS=true  # Use compression for cached content
